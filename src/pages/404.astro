---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import NotFound404 from '../assets/404.png'

---


<Layout title="404" descriptions='Pagina no encontrada'>
  <main class="bg-gray-950 w-screen h-screen flex flex-col justify-center items-center">
		<Image src={NotFound404} alt="logo" loading="lazy" class='w-2/5' />
    <h2 class="text-slate-50 font-bold text-2xl md:text-4xl my-5">Pagina no encontrada</h2>
    <a class="text-slate-50 border px-10 py-2 rounded-full border-white-500 hover:border-primary-500	hover:text-primary-500" href="/">Ir al inicio</a>
  </main>
</Layout>
